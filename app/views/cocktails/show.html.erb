<div class="container" id="cocktail-display">
    <div class="row">
      <div class="col-xs-12 col-sm-6" id="show-card">
        <div class="card">
          <h2><%= @cocktail.name %></h2>
          <% if @cocktail.doses.any? %>
            <ul>
              <% @cocktail.doses.each do |dose| %>
                <li>
                  <%= dose.description %> of <%= dose.ingredient.name %>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No recipe details yet!</p>
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6" id="show-card">
        <div class="card">
          <p>Add an ingredient</p>
          <%= simple_form_for([ @cocktail, @dose ]) do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.submit class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="card">
    <%= link_to 'Back', cocktails_path %></div>
</div>
</div>
